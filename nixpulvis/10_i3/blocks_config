# TODO: Incorperate some of the blocks from
# https://github.com/Anachron/i3blocks

separator_block_width=20
interval=5

[term]
command=bash -c 'echo term; if [ -n "$BLOCK_BUTTON" ]; then $TERMINAL > /dev/null & fi'
label=
interval=once

[web]
command=bash -c 'echo web; if [ -n "$BLOCK_BUTTON" ]; then firefox > /dev/null & fi'
label=
interval=once

[wifi]
instance=wlp4s0
command=/usr/lib/i3blocks/wifi
label=
separator=false

[network]
command=/usr/lib/i3blocks/iface
label=
separator=false

[bandwidth]
command=/usr/lib/i3blocks/bandwidth
interval=1

[temp]
command=/usr/lib/i3blocks/temperature
label=
separator=false

[cpu]
command=/usr/lib/i3blocks/cpu_usage
label=
separator=false

[load]
command=/usr/lib/i3blocks/load_average
label=

[disk]
command=/usr/lib/i3blocks/disk
label=

[memory]
command=/usr/lib/i3blocks/memory
label=

[volume]
command=/usr/lib/i3blocks/volume
interval=1
label=
# TODO: Use signals to update.
# signal=...
# interval=once

[brightness]
command=$HOME/.config/i3blocks/brightness
interval=1
label=

[battery]
command=/usr/lib/i3blocks/battery
label=

[time]
command=date '+%D %T'
interval=1
